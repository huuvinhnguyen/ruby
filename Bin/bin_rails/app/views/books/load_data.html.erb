<style>
h1 {text-align: center;}
div {text-align: center;}
</style>
<h1>List of books</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Subtitle</th>
      <th scope="col">isbn</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |book| %>
    <tr>
      <th scope="row"></th>
      <td><%= book.title %></td>
      <td><%= book.subtitle %></td>
      <td><%= book.isbn13 %></td>
      <td><%= book.price %></td>
    </tr>
    <% end %>
  </body>
</table>
<div>
<%= link_to "Back", books_load_data_path(page: (params[:page].to_i - 1) < 1 ? 1 : (params[:page].to_i - 1)), class: "btn btn-secondary" %>
<%= link_to "Next", books_load_data_path(page: params[:page].to_i + 1), class: "btn btn-secondary" %>
</div>
